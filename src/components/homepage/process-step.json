{
  "collectionName": "components_homepage_process_steps",
  "info": {
    "displayName": "Process Step",
    "icon": "number",
    "description": "Individual process step with number, title, description, and icon"
  },
  "options": {},
  "attributes": {
    "stepNumber": {
      "type": "string",
      "required": true,
      "maxLength": 10,
      "description": "Step number (e.g., '01', '02', '03', '04')"
    },
    "stepTitle": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "description": "Title of the step (e.g., 'Free Inspection', 'Install Protection')"
    },
    "stepDescription": {
      "type": "text",
      "required": true,
      "description": "Detailed description of what happens in this step"
    },
    "stepIcon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "description": "Icon image for the step"
    },
    "iconLabel": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "description": "Accessibility label for the icon (screen reader text)"
    }
  }
}
