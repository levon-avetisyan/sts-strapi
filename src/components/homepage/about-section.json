{
  "collectionName": "components_homepage_about_sections",
  "info": {
    "displayName": "About Section",
    "icon": "information",
    "description": "About section with company information and statistics"
  },
  "options": {},
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "required": true,
      "default": "About Source Termite Solutions",
      "maxLength": 255
    },
    "aboutImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "description": "Main about section image"
    },
    "aboutContent": {
      "type": "richtext",
      "required": true,
      "description": "Main about text content"
    },
    "companyStats": {
      "type": "component",
      "component": "homepage.company-stat",
      "repeatable": true,
      "required": true,
      "min": 2,
      "max": 6,
      "description": "Company statistics and achievements"
    },
    "trustBadgeText": {
      "type": "string",
      "required": true,
      "default": "Certified Professionals",
      "maxLength": 255,
      "description": "Trust badge text displayed below the section"
    }
  }
}
